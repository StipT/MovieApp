<?xml version="1.0" encoding="utf-8"?>


<ScrollView xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools"
            xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
            android:layout_height="match_parent" android:id="@+id/resultLayout">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:orientation="vertical">

        <ImageView
                android:layout_width="match_parent"
                android:layout_height="500dp"
                android:id="@+id/resultImage" android:layout_marginTop="8dp"
        />
        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/resultTitle"
                android:layout_marginTop="16dp"
                android:textSize="30sp" android:textAlignment="center"
                android:textStyle="bold|italic" android:textColor="@color/colorAccent"
                tools:text="@string/menu_title_toprated"/>
        <ImageView
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:id="@+id/resultRatingIcon"
                android:layout_marginTop="16dp" app:srcCompat="@drawable/ic_toprated_menu"
                android:tint="@color/colorAccent"/>
        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/resultRating"
                android:textAlignment="center" android:textStyle="bold"
                android:textColor="@android:color/black" android:textSize="24sp"/>
        <ImageView
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:id="@+id/resultDateIcon"
                android:layout_marginTop="28dp"
                app:srcCompat="@drawable/ic_date" android:tint="@color/colorAccent"/>
        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/resultDate"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:textSize="24sp" android:textStyle="italic" android:textAlignment="center"/>
        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/resultDescription"
                android:textAlignment="center" android:textSize="24sp"
                android:layout_marginTop="24dp" android:layout_margin="24dp"/>

    </LinearLayout>
</ScrollView>

